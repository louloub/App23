<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_item">

    <!-- LINEAR BAR DU HAUT -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:padding="10dp">

        <!-- NOM -->
        <TextView
            android:id="@+id/tvNameEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_margin="@dimen/generalMargin"
            android:padding="5dp"
            android:text="WonderDay OpenAIr"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:background="@drawable/rounded_corner"
            android:textSize="@dimen/size_title" />

        <!-- FB -->
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivFacebookEvent"
            android:src="@drawable/fb"
            android:layout_width="@dimen/size_icon_width"
            android:layout_height="@dimen/size_icon_height"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- LINEAR CENTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="@drawable/ripple"
        android:orientation="horizontal">

        <!-- VISUEL EVENT-->
        <ImageView
            android:id="@+id/ivPhotoEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@drawable/articles"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- DATE -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- "DU" -->
            <TextView
                android:id="@+id/du"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/generalMargin"
                android:text="Du" />

            <!-- START DATE -->
            <TextView
                android:id="@+id/tvDateStart"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/generalMargin"
                android:text="Jeudi 11 Juin 2019 15h00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <!-- "AU" -->
            <TextView
                android:id="@+id/au"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/generalMargin"
                android:text="au" />

            <!-- END DATE -->
            <TextView
                android:id="@+id/tvDateEnd"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameEvent"
                android:layout_margin="@dimen/generalMargin"
                android:layout_toRightOf="@id/ivPhotoEvent"
                android:text="Vendredi 12 Juin 2019 21h00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        </LinearLayout>

        <!-- LINEAR DJ -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- "DJS" -->
            <TextView
                android:id="@+id/tvArtisteList"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/generalMargin"
                android:layout_toRightOf="@id/ivPhotoEvent"
                android:text="DJs : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <!-- LISTE DJS -->
            <TextView
                android:id="@+id/tvArtisteName"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameEvent"
                android:layout_margin="@dimen/generalMargin"
                android:layout_toRightOf="@id/ivPhotoEvent"
                android:text="DJ1 - DJ2 - DJ3 ..."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        </LinearLayout>

        <!-- LINEAR LIEUX -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- "LIEUX" -->
            <TextView
                android:id="@+id/lieux"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/generalMargin"
                android:layout_toRightOf="@id/ivPhotoEvent"
                android:text="Lieux : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <!-- LIEUX -->
            <TextView
                android:id="@+id/tvLieux"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameEvent"
                android:layout_margin="@dimen/generalMargin"
                android:layout_toRightOf="@id/ivPhotoEvent"
                android:text="12 Allée de bidules 31765 Orléans"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        </LinearLayout>

    </LinearLayout>

    <!-- BONS PLANS -->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/generalMargin"
        android:orientation="horizontal">

        <!-- PREVENTES -->
        <RelativeLayout
            android:elevation="2dp"
            android:outlineSpotShadowColor="@color/grey"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_margin="@dimen/generalMargin"
            android:padding="5dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_margin="@dimen/generalMargin"
                android:padding="5dp">

                <!-- NBR PLACE -->
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvNbrPreventes"
                        android:text="10 "
                        android:textColor="@color/colorSecondaryDark"
                        android:textAppearance="?android:attr/textAppearanceButton"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </android.support.v7.widget.LinearLayoutCompat>

                <!-- "PLACES à" -->
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/placesa"
                        android:text=" places à "
                        android:textColor="@color/colorSecondaryDark"
                        android:textAppearance="?android:attr/textAppearanceButton"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </android.support.v7.widget.LinearLayoutCompat>

                <!-- PRIX PLACE -->
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tvPrixPreventes"
                        android:text=" 5 "
                        android:textColor="@color/colorSecondaryDark"
                        android:textAppearance="?android:attr/textAppearanceButton"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </android.support.v7.widget.LinearLayoutCompat>

                <!-- "€" -->
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/euros"
                        android:text="€"
                        android:textColor="@color/colorSecondaryDark"
                        android:textAppearance="?android:attr/textAppearanceButton"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.LinearLayoutCompat>
    </RelativeLayout>

        <!-- PV NOMBRE -->
        <!--<TextView
            android:id="@+id/tvNbrPreventes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_margin="@dimen/generalMargin"
            android:padding="5dp"
            android:text="10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:background="@drawable/rounded_corner"
            android:textSize="@dimen/size_title" />

        &lt;!&ndash; PV PRIX &ndash;&gt;
