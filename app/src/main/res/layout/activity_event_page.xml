<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_item">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:padding="10dp">

        <!-- NOM -->
        <TextView
            android:id="@+id/tvNameEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_margin="@dimen/generalMargin"
            android:padding="5dp"
            android:text="WonderDay OpenAIr"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:background="@drawable/rounded_corner"
            android:textSize="@dimen/size_title" />
    </LinearLayout>

    <!-- VISUEL EVENT-->
    <ImageView
        android:id="@+id/ivPhotoEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@drawable/articles" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- DATE -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDateStart"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameEvent"
                android:layout_margin="@dimen/generalMargin"
                android:layout_toRightOf="@id/ivPhotoEvent"
                android:text="Jeudi 11 Juin 2019 15h00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tvDateEnd"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameEvent"
                android:layout_margin="@dimen/generalMargin"
                android:layout_toRightOf="@id/ivPhotoEvent"
                android:text="Vendredi 12 Juin 2019 21h00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        </LinearLayout>

        <!-- ARTISTES -->
        <TextView
            android:id="@+id/tvArtisteName"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameEvent"
            android:layout_margin="@dimen/generalMargin"
            android:layout_toRightOf="@id/ivPhotoEvent"
            android:text="DJ1 - DJ2 - DJ3 ..."
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <!-- LIEUX -->
        <TextView
            android:id="@+id/tvLieux"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameEvent"
            android:layout_margin="@dimen/generalMargin"
            android:layout_toRightOf="@id/ivPhotoEvent"
            android:text="12 Allée de bidules 31765 Orléans"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <!-- ICONS RS & BONS PLANS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/generalMargin"
        android:orientation="horizontal">

        <!-- FB -->
        <ImageView
            android:id="@+id/ivFacebookEvent"
            android:src="@drawable/fb"
            android:layout_width="@dimen/size_icon_width"
            android:layout_height="@dimen/size_icon_height"
            android:padding="4dp"/>

        <!-- PV PRIX -->
        <TexteView
            android:id="@+id/tvPrixPreventes"
            android:text=""
            android:layout_width="@dimen/size_icon_width"
            android:layout_height="@dimen/size_icon_height"
            android:padding="4dp"/>

        <!-- PV NOMBRE -->
        <TexteView
            android:id="@+id/tvNbrPreventes"
            android:text=""
            android:layout_width="@dimen/size_icon_width"
            android:layout_height="@dimen/size_icon_height"
            android:padding="4dp"/>

    </LinearLayout>

    <!-- TRAIT SEPARATION -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_shadow_start_color" />
</LinearLayout>
