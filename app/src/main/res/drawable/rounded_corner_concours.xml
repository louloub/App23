<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
                android:shape="rectangle"
                android:padding="10dp">
            <stroke
                android:width="1dp"
                android:color="@color/colorConcoursOpacity80" />

            <solid
                android:color="@color/colorConcoursOpacity80"/>

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>